<h1>View Available Artists</h1>
A listing of all the artists currently in The Emkay Library collection.<br><br>
            <table>
        <tr>
            <th>Artist ID</th>
            <th>First Name</th>
            <th>Last Name</th>
        </tr>
        
        <%
        if(userData.length!=0){
        var i=1;
        userData.forEach(function(data){
        %>
        <tr>
            <td><%=i; %></td>
            <td><%=data.fullName %></td>
            <td><%=data.emailAddress %></td>
            <td><%=data.city %></td>
            <td><%=data.country %></td>
            <td><a href="/users/edit/<%=data.id%>">Edit</a></td>
            <td><a href="/users/delete/<%=data.id%>">Delete</a></td>
        </tr>
        <%  i++; }) %>
        <% } else{ %>
            <tr>
                <td colspan="7">No Data Found</td>
            </tr>
        <% } %>
    </table><br>

<h2>Search Artists</h2>
<form>
  <label for="last_name">
    <span>Last Name:</span>
  </label>
  <input type="text" id="Last_name" name="Last_name">
  <button type="submit">Search</button>
</form>

